<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <title>Blog Title<%= ' - ' + current_article.title unless current_article.nil? %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <%= stylesheet_link_tag "balikpapan" %>
    <%= javascript_include_tag  "balikpapan" %>
  </head>
  <body>
    <div class="container-fluid">
      <div class="navbar-default navbar-fixed-top" role="navigation">
         <div class="navbar-header">
              <button type="button" class="pull-left navbar-toggle nav-button "  data-toggle="offcanvas" data-target=".sidebar-nav">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="#">Oil City - Balikpapan Project</a>
         </div>
      </div>
   </div>

     <div id="wrapper">
         <!-- Sidebar -->
         <div id="sidebar-wrapper">
             <ul class="sidebar-nav">
                <% all_categories.each do |category| %>
               <li>
                 <a role="button" data-toggle="collapse" href= <%= "#" + "#{category}"%> aria-expanded= "false" aria-controls= <%= category %> >
                   <%= category %>
                 </a>
                 <div id= <%= category %> class="collapse">
                   <ul>
                     <% get_tags(category).each do |tag| %>
                      <li>
                          <%= link_to "#{tag}", "#{tag}.html" %>
                      </li>
                     <% end %>
                   </ul>
                 </div>
               </li>
               <% end %>
             </ul>
         </div>
         <!-- /#sidebar-wrapper -->

         <!-- Page Content -->
         <div id="page-content-wrapper">
             <div class="container-fluid">
                 <div class="row">
                  <%= yield %>
                 </div>
             </div>
         </div>
         <!-- /#page-content-wrapper -->

     </div>
     <!-- /#wrapper -->

     <script>
     $(".navbar-brand").click(function(e) {
         e.preventDefault();
         $("#wrapper").toggleClass("toggled");
     });
     $(".nav-button").click(function(e) {
         e.preventDefault();
         $("#wrapper").toggleClass("toggled");
     });
     </script>

  </body>
</html>
